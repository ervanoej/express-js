doctype html
html(lang='en')
 include common/head.pug
 +head("Lead Collector")
 body
  header
    include common/navbar.pug
    +navbar()
    .container
      .row.align-items-center
        .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
          h1.mb-3 Minimum Viable Landing Page
          p.lead Tutorial NodeJS ExpressJS
          p.lead.mb-4 Landing page and collecting email leads
          form(action="/", method="POST")
            .input-group.mb-3
              input(type="email",name="lead_email",
              placeholder="Masukkan email Anda").form-control
              .input-group-append
                button(type="submit").btn.btn-primary Get Started
      .row
        .col-md-6
          if leads
            h1 Leads
            table.table
              thead
                tr
                  th(scope="col") Email
                  th(scope="col") Actions
                  th(scope="col")
                tr
              tbody
                for lead in leads
                  tr(id=lead.id)
                    td
                      span #{lead.email}
                    td
                      a(href="/lead/" + lead.id)  Details
                    td
                      .btn.btn-danger(onclick=`deleteLead('${lead.id}')`) Delete
      include common/footer.pug
      +footer()
      script(src="/javascripts/leads.js")
